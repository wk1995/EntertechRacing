<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/d343dp"
    android:layout_height="@dimen/d346dp"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingVertical="@dimen/d12dp"
        android:paddingStart="@dimen/d16dp"
        android:paddingEnd="@dimen/d18dp"
        android:text="@string/racing_setting_set_time"
        android:textColor="@color/white"
        android:textSize="@dimen/s20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/flDialogContain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="@dimen/d40dp"
        app:layout_constraintBottom_toTopOf="@id/tvDialogCancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDialogTitle" />

    <TextView
        android:id="@+id/tvDialogCancel"
        android:layout_width="@dimen/d148dp"
        android:layout_height="@dimen/d56dp"
        android:layout_marginStart="@dimen/d16dp"
        android:layout_marginBottom="@dimen/d16dp"
        android:background="@drawable/dialog_btn_cancel_bg"
        android:gravity="center"
        android:text="@string/racing_setting_dialog_cancel"
        android:textColor="@color/white"
        android:textSize="@dimen/s16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDialogOk"
        android:layout_width="@dimen/d148dp"
        android:layout_height="@dimen/d56dp"
        android:layout_marginEnd="@dimen/d16dp"
        android:layout_marginBottom="@dimen/d16dp"
        android:background="@drawable/dialog_btn_ok_bg"
        android:gravity="center"
        android:text="@string/racing_setting_dialog_ok"
        android:textColor="@color/white"
        android:textSize="@dimen/s16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>